@model TwitterSystem.Web.ViewModels.Tweets.TweetInsertViewModel
@{
    ViewBag.Title = "PostTweet";
}

<h2>PostTweet</h2>

@using (Html.BeginForm("PostTweet", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Content)
        @Html.LabelFor(m => m.Content, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Tags)
        @Html.LabelFor(m => m.Tags, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Tags, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <br />
        <input type="submit" value="Tweet" class="btn-primary btn" />
    </div>
}