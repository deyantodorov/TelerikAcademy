@model object
<div class="clearfix">
    @Html.ValidationMessageFor(m => m, null, new { @class = "" + ViewBag.AddClass })
    <div>
        @Html.LabelFor(m => m, new { @class = "" + ViewBag.AddClass })
        @Html.PasswordFor(m => m, new { @class = "form-control " + ViewBag.AddClass })
    </div>
</div>