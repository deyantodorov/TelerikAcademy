@using System.Web.UI.HtmlControls
@model TwitterSystem.Web.ViewModels.Tweets.TweetEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row">
    @using (Html.BeginForm("Edit", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.Content)
            @Html.LabelFor(m => m.Content, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>

        @Html.HiddenFor(m => m.Id);
    }
</div>